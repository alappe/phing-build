<!--
 *
 * Let phpdocumentor build the API documentation into the Documentation/API
 * subfolder specified with the variable.
 *
-->
<project name="PHPDocumentor">
	<if>
		<equals arg1="${documentation.phpdocumentor.run}" arg2="true" />
		<then>
			<property name="documentation.phpdocumentor.destdir" value="Documentation" />
			<property name="documentation.phpdocumentor.sourcecode" value="true" />
			<property name="documentation.phpdocumentor.output" value="HTML:Smarty:PHP" />
			<phpdoc title="API Documentation for ${extension}" destdir="${documentation.phpdocumentor.destdir}" sourcecode="true" output="${documentation.phpdocumentor.output}" ignore="${documentation.phpdocumentor.ignore}">
				<fileset dir="${documentation.phpdocumentor.phppath}">
					<include name="**/*.php" />
				</fileset>
			</phpdoc>
		</then>
	</if>
</project>
